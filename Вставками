void Sort(int* arr, int arr_size) {
	srand(time(0));
	int tmp, item;
	int counter_swaps = 0;
	int compare = 0;
	for (int i = 1; i<arr_size; i++){
		//int k = i;
		//if (arr[k - 1] <= arr[k]) {
		//	compare++;
		//}
		
		for (int j = i; j > 0 && arr[j - 1] > arr[j]; j--) {
			counter_swaps++;
			int tmp = arr[j - 1];
			arr[j - 1] = arr[j];
			arr[j] = tmp;
		}
	}
	//cout << arr[arr_size] << endl;
	//cout << endl << "Количество сравнений:" << compare + counter_swaps << endl;
	cout << endl << "Количество перестановок:" << counter_swaps << endl;

}

